<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/Relative_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/TextView_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/splash_name"
            android:fontFamily="@font/altoy_font"
            android:textColor="@android:color/black"
            android:textSize="35sp"
            android:layout_margin="10dp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Relative_2"
        app:layout_constraintTop_toBottomOf="@id/Relative_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_login"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Relative_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Relative_2"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tview_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/signUpUsername"
            android:fontFamily="@font/altoy_font"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/etext_username"
            android:layout_below="@id/tview_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="20sp"
            android:background="@drawable/textbox"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tview_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/signUpEmail"
            android:fontFamily="@font/altoy_font"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/etext_email"
            android:layout_below="@id/tview_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textSize="20sp"
            android:background="@drawable/textbox"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tview_password"
            android:layout_below="@id/etext_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/signUpPassword"
            android:fontFamily="@font/altoy_font"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/etext_password"
            android:layout_below="@id/tview_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="20sp"
            android:background="@drawable/textbox"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@android:color/black"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Relative_4"
        app:layout_constraintTop_toBottomOf="@id/Relative_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp">

        <Button
            android:id="@+id/Button_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/signUp"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:background="@drawable/textbox"
            style="?android:attr/borderlessButtonStyle"
            android:drawableStart="@drawable/ic_loginicon" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>